<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration pour permettre les connexions HTTPS vers le domaine de production -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">sezam-api.qalebasse.cloud</domain>
        <trust-anchors>
            <!-- Autoriser les certificats système -->
            <certificates src="system" />
            <!-- Autoriser les certificats utilisateur (pour le développement) -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Configuration par défaut -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Pour le développement local (si nécessaire) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>

